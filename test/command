docker run -d --name redis-stack -p 6378:6378 --rm -e REDIS_ARGS="--requirepass mypassword --port 6378" redis/redis-stack-server:latest

docker exec -it redis-stack redis-cli -p 6378 -a mypassword

docker container stop -t 0 redis-stack



docker run -d --name redis-stack -p 6378:6379 --rm -e REDIS_ARGS="--requirepass mypassword" redis/redis-stack-server:latest


docker exec -it redis-redis-stack-1 redis-cli -p 6378 -a mypassword

docker exec -it redis-redis-stack-1 bash

docker logs redis-redis-stack-1